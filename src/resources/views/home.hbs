<div class="home-landing-container">
    <div class="container">
        <div class="row min-vh-100 align-items-center">
            <!-- Left Side - Login Form -->
            <div class="col-lg-6">
                <div class="login-section">
                    <!-- Logo + Tagline -->
                    <div class="brand-section">
                        <div class="brand-logo">
                            <i class="bi bi-check-circle-fill"></i>
                            <span class="brand-name">TaskMaster</span>
                        </div>
                        <p class="brand-tagline">Manage your tasks, your way</p>
                    </div>

                    <!-- Login Form -->
                    <div class="login-form-card">
                        <h3 class="login-title">Welcome Back</h3>
                        <p class="login-subtitle">Sign in to continue to your dashboard</p>

                        {{#if error}}
                            <div class="alert alert-danger login-alert" role="alert">
                                <i class="bi bi-exclamation-triangle"></i>
                                <span>{{error}}</span>
                            </div>
                        {{/if}}

                        <form action="/auth/login" method="POST" class="login-form">
                            <div class="form-group">
                                <label for="username" class="form-label">
                                    <i class="bi bi-person"></i>
                                    Username
                                </label>
                                <input type="text" class="form-control" id="username" name="username" 
                                       placeholder="Enter your username" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock"></i>
                                    Password
                                </label>
                                <input type="password" class="form-control" id="password" name="password" 
                                       placeholder="Enter your password" required>
                            </div>
                            
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary login-btn">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Sign In</span>
                                </button>
                            </div>
                        </form>

                        <!-- Quick Sign-up -->
                        <div class="signup-section">
                            <p class="signup-text">
                                Don't have an account? 
                                <a href="/auth/register" class="signup-link">Sign up free</a>
                            </p>
                        </div>

                        <!-- Benefits List -->
                        <div class="benefits-section">
                            <ul class="benefits-list">
                                <li>
                                    <i class="bi bi-check-circle"></i>
                                    Manage your tasks easily
                                </li>
                                <li>
                                    <i class="bi bi-shield-check"></i>
                                    Secure and private
                                </li>
                                <li>
                                    <i class="bi bi-heart"></i>
                                    Totally free
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Illustration/Dashboard Mockup -->
            <div class="col-lg-6">
                <div class="illustration-section">
                    <div class="dashboard-mockup">
                        <!-- Dashboard Preview -->
                        <div class="mockup-header">
                            <div class="mockup-dots">
                                <span class="dot red"></span>
                                <span class="dot yellow"></span>
                                <span class="dot green"></span>
                            </div>
                            <div class="mockup-title">My Dashboard</div>
                        </div>

                        <div class="mockup-content">
                            <!-- Stats Cards -->
                            <div class="stats-preview">
                                <div class="stat-card total">
                                    <div class="stat-icon">
                                        <i class="bi bi-list-task"></i>
                                    </div>
                                    <div class="stat-info">
                                        <span class="stat-number">24</span>
                                        <span class="stat-label">Total Tasks</span>
                                    </div>
                                </div>
                                <div class="stat-card completed">
                                    <div class="stat-icon">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div class="stat-info">
                                        <span class="stat-number">18</span>
                                        <span class="stat-label">Completed</span>
                                    </div>
                                </div>
                                <div class="stat-card pending">
                                    <div class="stat-icon">
                                        <i class="bi bi-clock"></i>
                                    </div>
                                    <div class="stat-info">
                                        <span class="stat-number">6</span>
                                        <span class="stat-label">Pending</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Task List Preview -->
                            <div class="task-preview">
                                <h6>Recent Tasks</h6>
                                <div class="task-item completed">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Complete project proposal</span>
                                </div>
                                <div class="task-item pending">
                                    <i class="bi bi-circle"></i>
                                    <span>Review team feedback</span>
                                </div>
                                <div class="task-item pending">
                                    <i class="bi bi-circle"></i>
                                    <span>Schedule client meeting</span>
                                </div>
                                <div class="task-item overdue">
                                    <i class="bi bi-exclamation-circle"></i>
                                    <span>Submit monthly report</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Floating Elements -->
                    <div class="floating-element element-1">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div class="floating-element element-2">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <div class="floating-element element-3">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mini Footer -->
        <div class="mini-footer">
            <div class="footer-copyright">
                <span>Â© 2025 TaskMaster. All rights reserved.</span>
            </div>
        </div>
    </div>
</div>