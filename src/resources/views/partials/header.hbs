<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="bi bi-check2-square"></i> To-Do App
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {{#if user}}
                    <!-- Show user dropdown when logged in -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center position-relative" href="#"
                            id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{#if user.avatar}}
                                <img src="{{user.avatar}}" alt="User Avatar" class="rounded-circle me-2" width="32" height="32">
                            {{else}}
                                <img src="/img/user-avatar/default.jpg" alt="User Avatar" class="rounded-circle me-2" width="32" height="32">
                            {{/if}}
                            <span>{{user.username}}</span>
                            {{#if (hasNearOverdueTasks tasks)}}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge">
                                    {{countNearOverdueTasks tasks}}
                                </span>
                            {{/if}}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" aria-labelledby="userDropdown">
                            <li class="dropdown-header">
                                <i class="bi bi-bell"></i> Notifications
                            </li>

                            {{#if (hasNearOverdueTasks tasks)}}
                                {{#each tasks}}
                                    {{#if (isNearOverdue due_datetime)}}
                                        <li>
                                            <a class="dropdown-item notification-item" href="/task/{{id}}">
                                                <div class="notification-content">
                                                    <div class="notification-icon">
                                                        <i class="bi bi-exclamation-triangle text-warning"></i>
                                                    </div>
                                                    <div class="notification-text">
                                                        <div class="notification-title">{{title}}</div>
                                                        <div class="notification-subtitle">
                                                            Due {{formatDateTime due_datetime}}
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    {{/if}}
                                {{/each}}
                            {{else}}
                                <li>
                                    <span class="dropdown-item-text text-muted text-center">
                                        <i class="bi bi-check-circle"></i>
                                        No upcoming deadlines
                                    </span>
                                </li>
                            {{/if}}

                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/task">
                                    <i class="bi bi-list-task"></i>
                                    My Tasks
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/user/profile">
                                    <i class="bi bi-person"></i>
                                    My Profile
                                </a>
                            </li>
                            <li>
                                <form method="POST" action="/auth/logout">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right"></i>
                                        Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                {{else}}
                    <!-- Show login/register buttons when not logged in -->
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">
                            <i class="bi bi-person-plus"></i>
                            Register
                        </a>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
</nav>